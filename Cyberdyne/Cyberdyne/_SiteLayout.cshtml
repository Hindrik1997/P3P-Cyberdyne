@using Resources;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Cyberdyne - @Page.Title</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <header>
        <div id="bar">
            <div class="float-left">
                <nav>
                    <ul id="menu">
                        <li><a href="~/">Home</a></li>
                        <li><a href="~/Menu/Robots/RobotList">Robots</a></li>
                        <li><a href="~/Contact">Contact</a></li>
                        @if (WebSecurity.CurrentUserId == 3)
                        {
                            <li><a href="~/Menu/Admin/AddRobot">Add Robot</a></li>
                            <li><a href="~/Menu/Admin/AddPart">Add Parts</a></li>
                        }
                    </ul>
                </nav>
            </div>

            <section id="login">
                @if (WebSecurity.IsAuthenticated)
                {
                    <text>
                        <a class="email" href="~/Account/Manage" title="Manage">@WebSecurity.CurrentUserName</a>,
                        <form id="logoutForm" action="~/Account/Logout" method="post">
                            @AntiForgery.GetHtml()
                            <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                        </form>
                    </text>
                }
                else {
                    <ul>
                        <li><a href="~/Account/Register">Register</a></li>
                        <li><a href="~/Account/Login">Log in</a></li>
                        <li>
                            <form id="Flags" method="post">
                                <input type="image" class="LanguageButton" src="~/Images/gb.png" name="English" value="en-GB" />
                                <input type="image" class="LanguageButton" src="~/Images/nl.png" name="Dutch" value="nl-NL" />
                            </form>
                        </li>
                    </ul>
                }
            </section>
        </div>

    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year Cyberdyne</p>
            </div>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>