@using Resources;
@using ResourceEditor;
@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Home Page";

    var EnglishContent = "";
    var DutchContent = "";

    ResourceEditor re = new ResourceEditor();

    if (IsPost && !Request["English1"].IsEmpty())
    {
        string path = Server.MapPath("~/App_GlobalResources/Content.resx");
        string position = "HomeContent";
        EnglishContent = Request["English1"];
        re.Add(path, position, EnglishContent);
        Response.Redirect("~/Default.cshtml");
    }

    if (IsPost && !Request["Dutch1"].IsEmpty())
    {
        string path = Server.MapPath("~/App_GlobalResources/Content.nl-NL.resx");
        string position = "HomeContent";
        DutchContent = Request["Dutch1"];
        re.Add(path, position, EnglishContent);
        Response.Redirect("~/Default.cshtml");
    }
}

<div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <a href="~/">
                <img class="img-responsive center-block" src="../Images/Logo.png" alt="Cyberdyne"></img>
            </a>
            <div class="well">
                <p class="text-center">
                    @Content.HomeContent
                </p>
                @if (WebSecurity.IsAuthenticated)
                {
                    <form method="post" id="HomeEditor">
                        <div>
                            <label for="English1">English:</label>
                            <textarea rows="3" cols="50" name="English1">@EnglishContent</textarea>
                        </div>

                        <div id="DutchText">
                            <label for="Dutch1"> Dutch:</label>
                            <textarea rows="3" cols="50" name="Dutch1">@DutchContent</textarea>
                        </div>

                        <div id="SubmitButton">
                            <p><input type="submit" name="Submit" value="@Content.Submit" /></p>
                        </div>
                    </form>
                }
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                      <!-- Indicators -->
                      <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                      </ol>

                      <!-- Wrapper for slides -->
                      <div class="carousel-inner" role="listbox">
                        <div class="item active">
                          <img src="~/images/terminator.png" alt="Chania">
                          <div class="carousel-caption">
                            <h3>Terminator</h3>
                            <p>We like the second movie more then the first</p>
                          </div>
                        </div>

                        <div class="item">
                          <img src="~/images/terminator.png" alt="Chania">
                          <div class="carousel-caption">
                            <h3>Terminator</h3>
                            <p>We like the second movie more then the first</p>
                          </div>
                        </div>

                        <div class="item">
                          <img src="~/images/terminator.png" alt="Chania">
                          <div class="carousel-caption">
                            <h3>Terminator</h3>
                            <p>We like the second movie more then the first</p>
                          </div>
                        </div>

                        <div class="item">
                          <img src="~/images/terminator.png" alt="Chania">
                          <div class="carousel-caption">
                            <h3>Terminator</h3>
                            <p>Some like the first movie more then the second</p>
                          </div>
                        </div>
                      </div>

                      <!-- Left and right controls -->
                      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>