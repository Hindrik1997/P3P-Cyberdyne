@{
    if (!IsPost)  {
        UICulture = "en-GB";
    }   

    if (IsPost && !Request["Dutch"].IsEmpty())
    {
        UICulture = "nl-NL";
        Session["selectedLanguage"] = UICulture;
    }

    if (IsPost && !Request["English"].IsEmpty())
    {
        UICulture = "en-GB";
        Session["selectedLanguage"] = UICulture;
    }
}
