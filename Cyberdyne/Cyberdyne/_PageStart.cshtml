@{
    //Selects Language:
    if (Session.IsNewSession)
    {
        UICulture = "en-GB"; //Default Language
    }
    else
    {
        UICulture = Session["language"].ToString();
    }

    //Changes Language:
    if (IsPost && !Request["Dutch"].IsEmpty())
    {
        UICulture = "nl-NL";
    }
    if (IsPost && !Request["English"].IsEmpty())
    {
        UICulture = "en-GB";
    }

    //Saves Language across pages:
    Session["language"] = UICulture;
}